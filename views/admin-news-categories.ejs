<%- include('partials/head', { title }) %>
<%- include('partials/navbar') %>

<main class="mx-auto flex w-full max-w-6xl flex-1 flex-col gap-10 px-4 py-12 sm:px-6 lg:px-8">
  <header class="flex flex-col gap-6 rounded-3xl border border-primary-100 bg-white/80 p-6 shadow-sm backdrop-blur sm:flex-row sm:items-center sm:justify-between">
    <div class="space-y-2">
      <p class="text-xs font-semibold uppercase tracking-wider text-primary-500">จัดการเนื้อหา</p>
      <h1 class="text-3xl font-semibold text-primary-700">จัดการหมวดหมู่ข่าวประชาสัมพันธ์</h1>
      <p class="max-w-xl text-sm leading-relaxed text-slate-600">
        จัดการหมวดหมู่สำหรับจัดกลุ่มข่าวประชาสัมพันธ์
      </p>
    </div>
    <div class="flex flex-wrap items-center gap-3">
      <a
        href="/admin/news-categories/new"
        class="inline-flex items-center gap-2 rounded-full bg-primary-600 px-5 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:bg-primary-700"
      >
        <svg class="h-4 w-4 text-white/90" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 5v14m7-7H5" />
        </svg>
        เพิ่มหมวดหมู่ข่าวใหม่
      </a>
      <a
        href="/admin/news"
        class="inline-flex items-center gap-2 rounded-full border border-primary-200/80 px-5 py-2.5 text-sm font-semibold text-primary-600 transition hover:bg-primary-50"
      >
        <svg class="h-4 w-4 text-primary-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 7h16M4 12h16m-7 5h7" />
        </svg>
        จัดการข่าวประชาสัมพันธ์
      </a>
    </div>
  </header>

  <%- include('partials/flash') %>

  <section class="rounded-3xl bg-white/90 shadow-sm ring-1 ring-black/5 backdrop-blur">
    <div class="flex flex-wrap items-center justify-between gap-3 border-b border-slate-100 px-6 py-4">
      <div>
        <h2 class="text-lg font-semibold text-slate-800">รายการหมวดหมู่ข่าว</h2>
        <p class="text-xs text-slate-500">เรียงตามลำดับการแสดงผล</p>
      </div>
      <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">
        ทั้งหมด <%= categories.length %> รายการ
      </span>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-slate-200 text-sm">
        <thead class="bg-slate-50/80 text-xs uppercase tracking-wide text-slate-500">
          <tr>
            <th scope="col" class="px-4 py-3 text-left">หมวดหมู่ข่าว</th>
            <th scope="col" class="px-4 py-3 text-left">สี</th>
            <th scope="col" class="px-4 py-3 text-left">จำนวนข่าว</th>
            <th scope="col" class="px-4 py-3 text-left">สถานะ</th>
            <th scope="col" class="px-4 py-3 text-center">การจัดการ</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
          <% if (categories && categories.length) { %>
            <% categories.forEach((category) => { %>
              <tr class="align-top transition hover:bg-primary-50/20 <%= category.isActive ? '' : 'bg-slate-50/50' %>">
                <td class="px-4 py-4">
                  <div class="flex items-start gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-full bg-<%= category.color %>-100 font-semibold text-<%= category.color %>-700">
                      <%= (category.name || '?').slice(0, 1).toUpperCase() %>
                    </div>
                    <div>
                      <div class="flex items-center gap-2">
                        <span class="text-sm font-semibold text-slate-800"><%= category.name %></span>
                        <% if (!category.isActive) { %>
                          <span class="rounded-full bg-slate-100 px-2 py-0.5 text-[11px] font-medium text-slate-600">
                            ปิดใช้งาน
                          </span>
                        <% } %>
                      </div>
                      <% if (category.description) { %>
                        <div class="mt-1 text-xs text-slate-500"><%= category.description %></div>
                      <% } %>
                      <div class="mt-1 text-xs text-slate-400">
                        ลำดับ: <%= category.displayOrder %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-4 py-4 text-sm text-slate-600">
                  <div class="flex items-center gap-2">
                    <span class="inline-flex items-center gap-1 rounded-full bg-<%= category.color %>-100 px-3 py-1 text-xs font-semibold text-<%= category.color %>-700">
                      <%= category.color %>
                    </span>
                  </div>
                </td>
                <td class="px-4 py-4 text-sm text-slate-600">
                  <div class="flex items-center gap-2">
                    <span class="text-lg font-semibold text-<%= category.color %>-600"><%= category.newsCount %></span>
                    <span class="text-xs text-slate-500">ข่าว</span>
                  </div>
                </td>
                <td class="px-4 py-4">
                  <div class="flex flex-wrap gap-2 text-xs font-semibold">
                    <span class="inline-flex items-center gap-1 rounded-full px-3 py-1 <%= category.isActive ? 'bg-emerald-100 text-emerald-700' : 'bg-slate-100 text-slate-600' %>">
                      <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" stroke-width="1.6" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
                      </svg>
                      <%= category.isActive ? 'เปิดใช้งาน' : 'ปิดใช้งาน' %>
                    </span>
                  </div>
                </td>
                <td class="px-4 py-4">
                  <div class="flex flex-col items-stretch justify-center gap-2 sm:flex-row">
                    <a
                      href="/admin/news-categories/<%= category.id %>/edit"
                      class="inline-flex w-full items-center justify-center gap-1 rounded-full bg-primary-600 px-3 py-1.5 text-xs font-semibold text-white shadow-sm transition hover:bg-primary-700"
                    >
                      <svg class="h-3.5 w-3.5 text-white/90" fill="none" stroke="currentColor" stroke-width="1.6" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m11 5 3 3m0 0-3 3m3-3v12" />
                      </svg>
                      แก้ไข
                    </a>
                    <form action="/admin/news-categories/<%= category.id %>/delete" method="post" class="flex items-center justify-center">
                      <button
                        type="submit"
                        class="inline-flex items-center gap-1 rounded-full bg-red-500/90 px-3 py-1.5 text-xs font-semibold text-white shadow-sm transition hover:bg-red-600"
                        onclick="return confirm('คุณแน่ใจหรือไม่ที่จะลบหมวดหมู่ข่าวนี้? การลบจะทำให้ข่าวทั้งหมดในหมวดนี้ไม่มีหมวดหมู่')"
                      >
                        <svg class="h-3.5 w-3.5 text-white/90" fill="none" stroke="currentColor" stroke-width="1.6" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                        </svg>
                        ลบ
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="5" class="px-6 py-12 text-center text-slate-500">
                ยังไม่มีหมวดหมู่ข่าวในระบบ เริ่มต้นด้วยการเพิ่มหมวดหมู่ข่าวใหม่ทันที
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </section>
</main>

<%- include('partials/footer') %>
