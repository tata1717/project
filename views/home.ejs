<%- include('partials/head', { title }) %>
<%- include('partials/navbar') %>

<main class="min-h-screen bg-slate-50">
  <% const sliderItems = sliderImages && sliderImages.length ? sliderImages : []; %>
  <% const newsItems = Array.isArray(news) ? news : []; %>
  <% const menuCategoryCount = Array.isArray(menuCategories) ? menuCategories.length : 0; %>
  <% const totalMenuItems = Array.isArray(menuCategories) ? menuCategories.reduce((count, category) => count + (Array.isArray(category.items) ? category.items.length : 0), 0) : 0; %>

  <div class="relative isolate">
    <div class="absolute inset-x-0 top-0 -z-10 h-[420px] bg-gradient-to-b from-primary-600 via-primary-500 to-primary-400"></div>
    <div class="relative mx-auto max-w-7xl px-4 pb-16 pt-10 sm:px-6 lg:px-8">
      <%- include('partials/flash') %>

      <section class="overflow-hidden rounded-3xl border border-white/20 bg-white/90 shadow-2xl backdrop-blur-sm">
        <div class="grid gap-10 p-8 sm:p-10 lg:grid-cols-[1.05fr_.95fr] lg:items-center">
          <div class="max-w-xl space-y-7">
            <span class="inline-flex items-center gap-2 rounded-full bg-primary-100/90 px-4 py-1 text-sm font-semibold text-primary-700 shadow-sm">
              <span class="flex h-2.5 w-2.5 rounded-full bg-primary-500"></span>
              ศูนย์กลางข่าวสารและบริการ
            </span>
            <h1 class="text-4xl font-extrabold leading-tight text-slate-900 sm:text-5xl">
              <%= title || 'ระบบบริหารจัดการสมาคม' %>
            </h1>
            <p class="text-lg leading-relaxed text-slate-600">
              ติดตามข่าวเด่น เข้าถึงบริการ และจัดการงานเอกสารได้ครบจากหน้าหลักเดียวที่ออกแบบมาให้ใช้งานง่ายขึ้นสำหรับทุกบทบาทในองค์กร
            </p>

            <% const quickStats = [
              { label: 'ข่าวไฮไลต์', value: sliderItems.length, caption: 'ภาพและเรื่องราวเด่น', iconPath: 'M13 16h-1v-4h-1m1-4h.01M12 18a6 6 0 100-12 6 6 0 000 12z' },
              { label: 'หมวดบริการ', value: menuCategoryCount, caption: 'หมวดเมนูที่พร้อมใช้งาน', iconPath: 'M4 6h16M4 12h16M4 18h16' },
              { label: 'บทความ / ข่าว', value: newsItems.length, caption: 'อัปเดตล่าสุดในระบบ', iconPath: 'M8 7V3m8 4V3m-9 8h10m-12 8h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v11a2 2 0 002 2z' }
            ]; %>

            <div class="grid gap-4 sm:grid-cols-3">
              <% quickStats.forEach((stat) => { %>
                <div class="group rounded-3xl border border-slate-200 bg-white/80 p-5 shadow-sm ring-1 ring-transparent transition hover:-translate-y-1 hover:border-primary-200 hover:ring-primary-100/70">
                  <div class="flex items-center justify-between">
                    <span class="flex h-11 w-11 items-center justify-center rounded-2xl bg-primary-100 text-primary-600 shadow-inner">
                      <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="<%= stat.iconPath %>" />
                      </svg>
                    </span>
                    <span class="text-xs font-semibold uppercase tracking-widest text-slate-400">Overview</span>
                  </div>
                  <p class="mt-5 text-3xl font-bold text-slate-900">
                    <%= typeof stat.value === 'number' ? stat.value.toLocaleString('th-TH') : stat.value %>
                  </p>
                  <p class="mt-1 text-sm font-semibold text-slate-700"><%= stat.label %></p>
                  <p class="mt-1 text-xs text-slate-500"><%= stat.caption %></p>
                </div>
              <% }) %>
            </div>
          </div>

          <div class="relative">
            <div class="rounded-3xl bg-gradient-to-br from-primary-600/20 via-primary-400/10 to-primary-200/20 p-1.5 sm:p-2">
              <div class="relative overflow-hidden rounded-3xl border border-white/60 bg-white shadow-2xl" data-slider-wrapper>
                <div class="relative h-full min-h-[320px] overflow-hidden" data-slider-container>
                  <% if (sliderItems.length) { %>
                    <% sliderItems.forEach((item, index) => { %>
                      <article
                        class="absolute inset-0 flex h-full flex-col opacity-0 transition-all duration-700 ease-in-out"
                        data-slide="<%= index %>"
                        style="<%= index === 0 ? 'opacity:1; transform:translate3d(0,0,0); position:relative;' : 'transform:translate3d(14%,0,0);' %>"
                      >
                        <div class="absolute inset-0 bg-gradient-to-t from-slate-950/80 via-slate-900/40 to-transparent"></div>
                        <div class="relative aspect-[16/9] w-full overflow-hidden rounded-t-3xl">
                          <img
                            src="/<%= item.imagePath %>"
                            alt="<%= item.title %>"
                            class="h-full w-full object-cover"
                          />
                          <div class="absolute inset-x-0 bottom-0 p-6 text-white sm:p-8">
                            <h3 class="text-2xl font-bold leading-tight sm:text-3xl"><%= item.title %></h3>
                            <% if (item.description) { %>
                              <p class="mt-3 text-sm leading-relaxed text-white/80 line-clamp-3"><%= item.description %></p>
                            <% } %>
                          </div>
                        </div>
                      </article>
                    <% }) %>
                  <% } else { %>
                    <div class="flex h-full min-h-[320px] flex-col items-center justify-center gap-4 bg-slate-50 p-10 text-center text-slate-500">
                      <svg class="h-14 w-14 text-primary-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 5h12M9 3v2m5 13h-3l-2 3-2-3H4a1 1 0 0 1-1-1V5a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v4" />
                      </svg>
                      <p class="text-base">ยังไม่มีภาพจากข่าวล่าสุด ระบบจะแสดงสไลด์เมื่อมีการเพิ่มข่าวพร้อมรูปภาพ</p>
                    </div>
                  <% } %>
                </div>

                <% if (sliderItems.length > 1) { %>
                  <div class="pointer-events-none absolute inset-x-0 top-1/2 flex -translate-y-1/2 justify-between px-4 sm:px-6">
                    <button type="button" class="pointer-events-auto inline-flex h-12 w-12 items-center justify-center rounded-full bg-white/90 text-primary-600 shadow-lg ring-1 ring-black/5 transition hover:bg-white" data-slider-prev aria-label="สไลด์ก่อนหน้า">
                      <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                      </svg>
                    </button>
                    <button type="button" class="pointer-events-auto inline-flex h-12 w-12 items-center justify-center rounded-full bg-white/90 text-primary-600 shadow-lg ring-1 ring-black/5 transition hover:bg-white" data-slider-next aria-label="สไลด์ถัดไป">
                      <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                      </svg>
                    </button>
                  </div>
                  <div class="flex items-center justify-center gap-2 px-6 pb-6 pt-4 sm:px-8">
                    <% sliderItems.forEach((item, index) => { %>
                      <button
                        type="button"
                        class="h-2.5 w-8 rounded-full bg-slate-300 transition data-[active='true']:w-12 data-[active='true']:bg-primary-500"
                        data-slider-dot="<%= index %>"
                        aria-label="แสดงสไลด์ที่ <%= index + 1 %>"
                      ></button>
                    <% }) %>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>

  <div class="mx-auto max-w-7xl space-y-16 px-4 pb-20 sm:px-6 lg:px-8">
    <% if (menuCategories && menuCategories.length) { %>
      <section class="rounded-3xl border border-slate-200 bg-white/95 p-8 shadow-xl backdrop-blur-sm sm:p-10">
        <header class="flex flex-col gap-5 border-b border-slate-100 pb-5 lg:flex-row lg:items-center lg:justify-between">
          <div class="max-w-2xl">
            <h2 class="text-3xl font-bold text-slate-900">บริการและงานที่เกี่ยวข้อง</h2>
            <p class="mt-2 text-base leading-relaxed text-slate-600">
              รวมลิงก์บริการทั้งหมด <%= totalMenuItems.toLocaleString('th-TH') %> รายการ จากหมวดหมู่ <%= menuCategoryCount.toLocaleString('th-TH') %> หมวด เพื่อเข้าถึงงานที่ต้องใช้บ่อยได้ง่ายขึ้น
            </p>
          </div>
          <% if (currentUser && currentUser.role === 'admin') { %>
            <div class="flex flex-wrap items-center gap-3 text-sm">
              <a
                href="/admin/menu-categories"
                class="inline-flex items-center gap-2 rounded-full border border-primary-200 px-4 py-2 font-medium text-primary-600 transition hover:bg-primary-50"
              >
                <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
                จัดการหมวดเมนู
              </a>
              <a
                href="/admin/menu-items"
                class="inline-flex items-center gap-2 rounded-full border border-primary-200 px-4 py-2 font-medium text-primary-600 transition hover:bg-primary-50"
              >
                <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
                </svg>
                จัดการเมนูย่อ
              </a>
            </div>
          <% } %>
        </header>

        <div class="mt-8 space-y-6">
          <% menuCategories.forEach((category) => { %>
            <div class="rounded-2xl border border-slate-200 bg-white px-5 py-6 shadow-sm transition hover:border-primary-200 sm:px-6">
              <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
                <div class="flex items-center gap-3">
                  <% if (category.icon) { %>
                    <span class="flex h-12 w-12 items-center justify-center rounded-2xl bg-<%= category.color %>-100 text-<%= category.color %>-600 shadow-inner">
                      <i class="<%= category.icon %> text-xl"></i>
                    </span>
                  <% } else { %>
                    <span class="flex h-12 w-12 items-center justify-center rounded-2xl bg-<%= category.color %>-100 text-<%= category.color %>-600 shadow-inner">
                      <svg class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                      </svg>
                    </span>
                  <% } %>
                  <div>
                    <h3 class="text-xl font-semibold text-slate-900"><%= category.name %></h3>
                    <% if (category.description) { %>
                      <p class="text-sm text-slate-500"><%= category.description %></p>
                    <% } %>
                  </div>
                </div>
                <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">
                  <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 7h18M3 12h18M3 17h18" />
                  </svg>
                  <%= (category.items && category.items.length ? category.items.length : 0).toLocaleString('th-TH') %> ลิงก์
                </span>
              </div>

              <% if (category.items && category.items.length) { %>
                <div class="mt-4 grid gap-2 sm:grid-cols-2 lg:grid-cols-3">
                  <% category.items.forEach((item) => { %>
                    <% const isActive = Boolean(item.link); %>
                    <a
                      href="<%= isActive ? item.link : '#' %>"
                      class="group flex items-center justify-between rounded-xl border border-slate-200 bg-white px-3.5 py-2.5 text-sm transition <%= isActive ? 'hover:border-primary-200 hover:bg-primary-50/70' : 'cursor-not-allowed opacity-60' %>"
                      <%= isActive ? '' : 'onclick="return false;"' %>
                    >
                      <div class="flex items-center gap-3">
                        <% if (item.imagePath) { %>
                          <img
                            src="/<%= item.imagePath %>"
                            alt="<%= item.title %>"
                            class="h-9 w-9 flex-shrink-0 rounded-lg object-cover ring-1 ring-slate-200"
                          />
                        <% } else { %>
                          <span class="flex h-9 w-9 flex-shrink-0 items-center justify-center rounded-lg bg-<%= category.color %>-100 text-<%= category.color %>-600">
                            <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                            </svg>
                          </span>
                        <% } %>
                        <div class="min-w-0">
                          <p class="truncate font-semibold text-slate-800"><%= item.title %></p>
                          <% if (item.description) { %>
                            <p class="truncate text-xs text-slate-500"><%= item.description %></p>
                          <% } %>
                        </div>
                      </div>
                      <svg class="h-4 w-4 text-slate-400 transition group-hover:text-primary-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  <% }) %>
                </div>
              <% } else { %>
                <div class="mt-4 rounded-xl border border-dashed border-slate-200 bg-slate-50 px-4 py-6 text-center text-sm text-slate-500">
                  ยังไม่มีลิงก์ในหมวดนี้
                </div>
              <% } %>
            </div>
          <% }) %>
        </div>
      </section>
    <% } %>

    <section class="rounded-3xl border border-slate-200 bg-white/95 p-8 shadow-xl backdrop-blur-sm sm:p-10">
      <header class="flex flex-col gap-6 border-b border-slate-100 pb-6 lg:flex-row lg:items-center lg:justify-between">
        <div>
          <h2 class="text-3xl font-bold text-slate-900">ข่าวประชาสัมพันธ์ล่าสุด</h2>
          <p class="mt-2 text-base leading-relaxed text-slate-600">สรุปข่าวสาร กิจกรรม และประกาศสำคัญจากหน่วยงานแบบทันสถานการณ์</p>
        </div>
        <% const newsCategoryList = Array.isArray(newsCategories) ? newsCategories : []; %>
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-end">
          <% if (newsCategoryList.length > 0) { %>
            <div class="flex flex-wrap items-center gap-2">
              <button
                type="button"
                onclick="filterNewsByCategory('all')"
                class="news-filter-btn inline-flex items-center gap-2 rounded-full bg-primary-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-primary-700"
                data-news-filter="all"
                data-variant="all"
              >
                <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
                ทั้งหมด
              </button>
              <% newsCategoryList.forEach((category) => { %>
                <button
                  type="button"
                  onclick="filterNewsByCategory('<%= category.id %>')"
                  class="news-filter-btn inline-flex items-center gap-2 rounded-full bg-<%= category.color %>-100 px-4 py-2 text-sm font-semibold text-<%= category.color %>-700 transition hover:bg-<%= category.color %>-200"
                  data-news-filter="<%= category.id %>"
                >
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                  </svg>
                  <%= category.name %>
                  <span class="ml-1 rounded-full bg-<%= category.color %>-200 px-2 py-0.5 text-xs font-bold text-<%= category.color %>-800">
                    <%= category.newsCount %>
                  </span>
                </button>
              <% }) %>
            </div>
          <% } %>
          <% if (currentUser && currentUser.role === 'admin') { %>
            <a
              href="/admin/news"
              class="inline-flex items-center gap-2 rounded-full border border-primary-200 px-4 py-2 text-sm font-medium text-primary-600 transition hover:bg-primary-50"
            >
              <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
              </svg>
              จัดการข่าว
            </a>
          <% } %>
        </div>
      </header>

      <% if (newsItems.length) { %>
        <div class="mt-8">
          <div class="space-y-6" data-news-grid>
            <% newsItems.forEach((item) => { %>
              <article
                class="news-item group flex w-full flex-col overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-sm transition hover:-translate-y-1 hover:border-primary-200 hover:shadow-lg sm:flex-row"
                data-news-item
                data-category="<%= item.category ? item.category.id : 'none' %>"
              >
                <% if (item.imagePath) { %>
                  <figure class="relative w-full shrink-0 overflow-hidden sm:w-48 md:w-56 lg:w-64">
                    <img
                      src="/<%= item.imagePath %>"
                      alt="<%= item.imageCaption || item.title %>"
                      class="h-full w-full object-cover transition duration-500 group-hover:scale-105"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-slate-900/70 via-slate-900/10 to-transparent"></div>
                    <div class="absolute inset-x-0 bottom-0 flex items-center justify-between px-4 pb-3 text-[11px] text-white sm:px-5">
                      <span class="inline-flex items-center gap-1 rounded-full bg-white/15 px-3 py-1 font-medium">
                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10m-12 8h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v11a2 2 0 002 2z" />
                        </svg>
                        <%= new Date(item.createdAt).toLocaleDateString('th-TH', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                      </span>
                      <% if (item.attachmentCount > 0) { %>
                        <span class="inline-flex items-center gap-1 rounded-full bg-white/10 px-3 py-1 font-medium">
                          <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.415-6.414a4 4 0 00-5.657-5.657l-6.414 6.414" />
                          </svg>
                          ไฟล์แนบ <%= item.attachmentCount %>
                        </span>
                      <% } %>
                    </div>
                  </figure>
                <% } else { %>
                  <div class="flex h-full min-h-[120px] w-full shrink-0 items-center gap-3 bg-gradient-to-r from-primary-100 via-primary-50 to-white px-6 text-sm font-semibold text-primary-700 sm:w-48 md:w-56 lg:w-64">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                    </svg>
                    ข่าวล่าสุด
                  </div>
                <% } %>

                <div class="flex flex-1 flex-col justify-between gap-4 p-5">
                  <div class="space-y-3">
                    <div class="flex flex-wrap items-center gap-2 text-[11px] text-slate-500">
                      <% if (item.category) { %>
                        <a
                          href="/news/category/<%= item.category.id %>"
                          class="inline-flex items-center gap-1 rounded-full bg-<%= item.category.color %>-100 px-3 py-1 font-semibold text-<%= item.category.color %>-700 transition hover:bg-<%= item.category.color %>-200"
                        >
                          <svg class="h-3 w-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                          </svg>
                          <%= item.category.name %>
                        </a>
                      <% } %>
                      <% if (!item.imagePath) { %>
                        <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-3 py-1 font-medium text-slate-600">
                          <svg class="h-3 w-3 text-primary-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10m-12 8h14a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v11a2 2 0 0 0 2 2Z" />
                          </svg>
                          <%= new Date(item.createdAt).toLocaleDateString('th-TH', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                        </span>
                      <% } %>
                      <% if (item.important) { %>
                        <span class="inline-flex items-center gap-1 rounded-full bg-red-100 px-3 py-1 font-semibold text-red-600">
                          <svg class="h-3 w-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01M5.07 19h13.86a2 2 0 001.74-3l-6.93-12a2 2 0 00-3.48 0l-6.93 12a2 2 0 001.74 3z" />
                          </svg>
