                    <a
                      href="/news/<%= item.slug %>"
                      class="inline-flex items-center gap-2 rounded-full bg-primary-600 px-3 py-1.5 text-sm font-semibold text-white transition hover:bg-primary-700"
                    >
                      อ่านต่อ
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  </div>
                </div>
              </article>
            <% }) %>
          </div>
        </div>
      <% } else { %>
        <div class="mt-8 rounded-3xl border border-dashed border-slate-200 bg-slate-50 px-8 py-12 text-center text-slate-500">
          ยังไม่มีข่าวประชาสัมพันธ์ ข้อมูลที่เผยแพร่จะแสดงในส่วนนี้
        </div>
      <% } %>
    </section>
  </div>
</main>

<script>
  function filterNewsByCategory(categoryId) {
    const buttons = document.querySelectorAll('.news-filter-btn');
    buttons.forEach((button) => {
      const isActive = button.dataset.newsFilter === categoryId;
      const variant = button.dataset.variant || 'category';

      if (variant === 'all') {
        button.classList.toggle('bg-primary-600', isActive);
        button.classList.toggle('text-white', isActive);
        button.classList.toggle('bg-primary-100', !isActive);
        button.classList.toggle('text-primary-700', !isActive);
        button.classList.remove('ring-2', 'ring-primary-200');
      } else {
        button.classList.toggle('ring-2', isActive);
        button.classList.toggle('ring-primary-200', isActive);
      }

      button.classList.toggle('opacity-60', !isActive);
      button.dataset.state = isActive ? 'active' : 'idle';
    });

    const newsItems = document.querySelectorAll('[data-news-item]');
    let visibleCount = 0;

    newsItems.forEach((item) => {
      const matches = categoryId === 'all' || item.dataset.category === categoryId;
      item.classList.toggle('hidden', !matches);
      item.classList.toggle('opacity-0', !matches);
      if (matches) {
        visibleCount += 1;
      }
    });

    const grid = document.querySelector('[data-news-grid]');
    if (!grid) return;

    let emptyState = grid.querySelector('[data-news-empty]');
    if (visibleCount === 0 && categoryId !== 'all') {
      if (!emptyState) {
        emptyState = document.createElement('div');
        emptyState.setAttribute('data-news-empty', 'true');
        emptyState.className = 'w-full rounded-3xl border border-dashed border-slate-200 bg-slate-50 px-8 py-12 text-center text-slate-500';
        emptyState.innerHTML = `
          <div class="flex flex-col items-center gap-4">
            <div class="flex h-16 w-16 items-center justify-center rounded-full bg-slate-100 text-slate-600">
              <svg class="h-8 w-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
            </div>
            <div>
              <p class="text-lg font-semibold text-slate-700">ไม่มีข่าวในหมวดหมู่นี้</p>
              <p class="text-sm text-slate-500">ลองเลือกหมวดหมู่อื่นหรือดูข่าวทั้งหมด</p>
            </div>
          </div>
        `;
        grid.appendChild(emptyState);
      }
      emptyState.classList.remove('hidden');
    } else if (emptyState) {
      emptyState.classList.add('hidden');
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    filterNewsByCategory('all');

    document.querySelectorAll('[data-slider-wrapper]').forEach((wrapper) => {
      const container = wrapper.querySelector('[data-slider-container]');
      if (!container) return;

      const slides = Array.from(container.querySelectorAll('[data-slide]'));
      if (!slides.length) return;

      const prevButton = wrapper.querySelector('[data-slider-prev]');
      const nextButton = wrapper.querySelector('[data-slider-next]');
      const dots = Array.from(wrapper.querySelectorAll('[data-slider-dot]'));
      let activeIndex = 0;
      let autoPlayTimer = null;

      const applyState = (index) => {
        activeIndex = (index + slides.length) % slides.length;
        slides.forEach((slide, slideIndex) => {
          if (slideIndex === activeIndex) {
            slide.style.opacity = '1';
            slide.style.transform = 'translate3d(0,0,0)';
            slide.style.position = 'relative';
            slide.style.pointerEvents = 'auto';
          } else {
            slide.style.opacity = '0';
            slide.style.transform = slideIndex < activeIndex ? 'translate3d(-8%,0,0)' : 'translate3d(14%,0,0)';
            slide.style.position = 'absolute';
            slide.style.pointerEvents = 'none';
          }
        });
        dots.forEach((dot) => {
          dot.dataset.active = dot.dataset.sliderDot === String(activeIndex) ? 'true' : 'false';
        });
      };

      const showNext = () => applyState(activeIndex + 1);
      const showPrev = () => applyState(activeIndex - 1);

      const restartAutoPlay = () => {
        if (autoPlayTimer) clearInterval(autoPlayTimer);
        if (slides.length <= 1) return;
        autoPlayTimer = setInterval(showNext, 6000);
      };

      if (prevButton) {
        prevButton.addEventListener('click', () => {
          showPrev();
          restartAutoPlay();
        });
      }
      if (nextButton) {
        nextButton.addEventListener('click', () => {
          showNext();
          restartAutoPlay();
        });
      }
      dots.forEach((dot) => {
        dot.addEventListener('click', () => {
          applyState(Number(dot.dataset.sliderDot));
          restartAutoPlay();
        });
      });

      applyState(0);
      restartAutoPlay();
    });
  });
</script>

