<%- include('partials/head', { title }) %>
<%- include('partials/navbar') %>

<main class="mx-auto flex w-full max-w-6xl flex-1 flex-col gap-10 px-4 py-12 sm:px-6 lg:px-8 xl:gap-12">
  <%- include('partials/flash') %>

  <header class="flex flex-col gap-6 rounded-3xl border border-<%= category.color %>-100 bg-white/80 p-6 shadow-sm backdrop-blur sm:flex-row sm:items-center sm:justify-between">
    <div class="space-y-2">
      <div class="flex items-center gap-3">
        <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-<%= category.color %>-100 text-<%= category.color %>-600">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-semibold text-<%= category.color %>-700">ข่าว<%= category.name %></h1>
          <% if (category.description) { %>
            <p class="text-sm text-slate-600"><%= category.description %></p>
          <% } %>
        </div>
      </div>
    </div>
    <div class="flex flex-wrap items-center gap-3">
      <a
        href="/"
        class="inline-flex items-center gap-2 rounded-full border border-<%= category.color %>-200 px-5 py-2.5 text-sm font-semibold text-<%= category.color %>-600 transition hover:bg-<%= category.color %>-50"
      >
        <svg class="h-4 w-4 text-<%= category.color %>-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
        </svg>
        กลับหน้าแรก
      </a>
      <% if (currentUser && currentUser.role === 'admin') { %>
        <a
          href="/admin/news-categories"
          class="inline-flex items-center gap-2 rounded-full bg-<%= category.color %>-600 px-5 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:bg-<%= category.color %>-700"
        >
          <svg class="h-4 w-4 text-white/90" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          จัดการหมวดหมู่
        </a>
      <% } %>
    </div>
  </header>

  <section class="rounded-3xl bg-white/80 p-8 shadow-sm ring-1 ring-black/5 backdrop-blur">
    <div class="flex flex-wrap items-center justify-between gap-3 border-b border-slate-100 pb-6">
      <div>
        <h2 class="text-2xl font-semibold text-slate-800">ข่าว<%= category.name %></h2>
        <p class="text-sm text-slate-600">ข่าวประชาสัมพันธ์ในหมวด<%= category.name %></p>
      </div>
      <span class="inline-flex items-center gap-1 rounded-full bg-<%= category.color %>-100 px-3 py-1 text-xs font-semibold text-<%= category.color %>-700">
        ทั้งหมด <%= news.length %> ข่าว
      </span>
    </div>

    <% if (news && news.length) { %>
      <div class="mt-8 grid gap-6 md:grid-cols-2 xl:grid-cols-3">
        <% news.forEach((item) => { %>
          <article class="flex h-full flex-col overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm transition hover:-translate-y-1 hover:shadow-lg">
            <% if (item.imagePath) { %>
              <figure class="relative">
                <img
                  src="/<%= item.imagePath %>"
                  alt="<%= item.imageCaption || item.title %>"
                  class="h-80 w-full object-cover"
                />
                <% if (item.imageCaption) { %>
                  <figcaption class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent px-4 py-2 text-xs text-white">
                    <%= item.imageCaption %>
                  </figcaption>
                <% } %>
              </figure>
            <% } %>
            <div class="flex flex-1 flex-col gap-4 p-6">
              <div class="flex flex-wrap items-center justify-between gap-2 text-xs text-slate-500">
                <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-3 py-1 font-medium text-slate-600">
                  <svg class="h-3.5 w-3.5 text-<%= category.color %>-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10m-12 8h14a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v11a2 2 0 0 0 2 2Z" />
                  </svg>
                  <%= new Date(item.createdAt).toLocaleDateString('th-TH', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                </span>
                <% if (item.attachmentCount > 0) { %>
                  <span class="inline-flex items-center gap-1 rounded-full bg-<%= category.color %>-50 px-3 py-1 font-medium text-<%= category.color %>-600">
                    <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15.172 7l-6.586 6.586a2 2 0 1 0 2.828 2.828l6.415-6.414a4 4 0 0 0-5.657-5.657l-6.414 6.414" />
                    </svg>
                    ไฟล์แนบ <%= item.attachmentCount %>
                  </span>
                <% } %>
              </div>

              <div>
                <h3 class="text-lg font-semibold text-slate-800"><%= item.title %></h3>
                <p class="mt-2 text-sm leading-relaxed text-slate-600"><%= item.preview %></p>
              </div>

              <div class="flex items-center gap-3 rounded-xl bg-slate-50 px-3 py-2">
                <% const authorName = (item.author && item.author.name) ? item.author.name : 'ทีมผู้ดูแลระบบ'; %>
                <% const authorInitial = authorName.trim().charAt(0).toUpperCase(); %>
                <% if (item.author && item.author.image) { %>
                  <img
                    src="/<%= item.author.image %>"
                    alt="<%= authorName %>"
                    class="h-10 w-10 rounded-full object-cover ring-2 ring-white shadow"
                  />
                <% } else { %>
                  <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-<%= category.color %>-100 text-sm font-semibold text-<%= category.color %>-600 ring-2 ring-white shadow">
                    <%= authorInitial %>
                  </span>
                <% } %>
                <div class="min-w-0">
                  <p class="truncate text-sm font-semibold text-slate-700"><%= authorName %></p>
                  <p class="truncate text-xs text-slate-500">
                    <%= item.author && item.author.position ? item.author.position : 'ผู้ดูแลระบบ' %>
                    <% if (item.author && item.author.affiliation) { %>
                      · <span class="truncate"><%= item.author.affiliation %></span>
                    <% } %>
                  </p>
                </div>
              </div>

              <div class="mt-auto pt-2">
                <a
                  href="/news/<%= item.slug %>"
                  class="inline-flex items-center gap-2 text-sm font-semibold text-<%= category.color %>-600 transition hover:text-<%= category.color %>-700"
                >
                  อ่านรายละเอียด
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </article>
        <% }) %>
      </div>
    <% } else { %>
      <div class="mt-8 rounded-2xl border border-dashed border-slate-200 bg-slate-50 px-8 py-12 text-center text-slate-500">
        <div class="flex flex-col items-center gap-4">
          <div class="flex h-16 w-16 items-center justify-center rounded-full bg-<%= category.color %>-100 text-<%= category.color %>-600">
            <svg class="h-8 w-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>
          <div>
            <p class="text-lg font-semibold text-slate-700">ยังไม่มีข่าวในหมวด<%= category.name %></p>
            <p class="text-sm text-slate-500">ข่าวประชาสัมพันธ์ในหมวดนี้จะแสดงที่นี่</p>
          </div>
        </div>
      </div>
    <% } %>
  </section>
</main>

<%- include('partials/footer') %>
