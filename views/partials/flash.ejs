<% if (error) { %>
  <div class="relative mb-6 flex items-start gap-3 rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700 shadow-sm" data-alert="true">
    <div class="flex h-8 w-8 shrink-0 items-center justify-center rounded-full bg-rose-100 text-rose-600">
      <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v4m0 4h.01M4.318 4.318A10.5 10.5 0 1 1 19.682 19.68 10.5 10.5 0 0 1 4.318 4.318Z" />
      </svg>
    </div>
    <div class="pr-8">
      <p class="font-medium text-rose-700">เกิดข้อผิดพลาด</p>
      <p class="mt-1 text-sm text-rose-600"><%= error %></p>
    </div>
    <button type="button" class="absolute right-3 top-3 rounded-full p-1 text-rose-400 transition hover:bg-rose-100 hover:text-rose-600" data-alert-close>
      <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6m0 12L6 6" />
      </svg>
    </button>
  </div>
<% } %>
<% if (success) { %>
  <div class="relative mb-6 flex items-start gap-3 rounded-2xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700 shadow-sm" data-alert="true">
    <div class="flex h-8 w-8 shrink-0 items-center justify-center rounded-full bg-emerald-100 text-emerald-600">
      <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
      </svg>
    </div>
    <div class="pr-8">
      <p class="font-medium text-emerald-700">ดำเนินการสำเร็จ</p>
      <p class="mt-1 text-sm text-emerald-600"><%= success %></p>
    </div>
    <button type="button" class="absolute right-3 top-3 rounded-full p-1 text-emerald-400 transition hover:bg-emerald-100 hover:text-emerald-600" data-alert-close>
      <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6m0 12L6 6" />
      </svg>
    </button>
  </div>
<% } %>
